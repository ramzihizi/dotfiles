{
  "title": "MRD/Windows App: ⌘→Ctrl (with Win passthroughs)",
  "rules": [
    {
      "description": "When MRD/Windows App is frontmost: map ⌘ to Ctrl; ⌘ alone → Win; add ⌥+⌘ passthroughs for common Win shortcuts",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "left_gui" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$",
                "^com\\.microsoft\\.rdc\\.macos\\.beta$",
                "^com\\.microsoft\\.windowsapp$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "left_gui" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$",
                "^com\\.microsoft\\.rdc\\.macos\\.beta$",
                "^com\\.microsoft\\.windowsapp$"
              ]
            }
          ]
        },

        {
          "type": "basic",
