{
  "title": "MRD: VS Code-friendly ⌘→Ctrl (only when RDP is frontmost)",
  "rules": [
    {
      "description": "Map ⌘ to Ctrl for common VS Code shortcuts in Microsoft Remote Desktop / Windows App only",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": ["command"], "optional": ["any"] }
          },
          "to": [{ "key_code": "c", "modifiers": ["left_control"] }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$",
                "^com\\.microsoft\\.rdc\\.macos\\.beta$",
                "^com\\.microsoft\\.windowsapp$"
              ]
            }
          ]
        },
        {
          "type": "basic",
